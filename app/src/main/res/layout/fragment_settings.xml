<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".gui.SettingsFragment">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center_vertical">
            <TextView
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="100dp"
                    android:textSize="15sp"
                    android:textColor="@color/main_text"
                    android:text="@string/theme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView"/>
            <TextView
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="100dp"
                    android:textSize="12sp"
                    android:textColor="@color/main_text"
                    android:text="@string/theme_default"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center_vertical">
            <TextView
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="100dp"
                    android:textSize="15sp"
                    android:textColor="@color/main_text"
                    android:text="@string/night_theme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView12"/>
            <TextView
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="100dp"
                    android:textSize="12sp"
                    android:textColor="@color/main_text"
                    android:text="@string/night_theme_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView13"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center_vertical">
            <Switch
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:textSize="15sp"
                    android:textColor="@color/main_text"
                    android:text="@string/analytics"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/switch1"/>
            <TextView
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="100dp"
                    android:textSize="12sp"
                    android:textColor="@color/main_text"
                    android:text="@string/analytics_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center_vertical">
            <Switch
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:textSize="15sp"
                    android:textColor="@color/main_text"
                    android:text="@string/newsfeed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/switch2"/>
            <TextView
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="100dp"
                    android:textSize="12sp"
                    android:textColor="@color/main_text"
                    android:text="@string/newsfeed_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center_vertical">
            <Switch
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:textSize="15sp"
                    android:textColor="@color/main_text"
                    android:text="@string/ipv6_sources"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/switch3"/>
            <TextView
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="100dp"
                    android:textSize="12sp"
                    android:textColor="@color/main_text"
                    android:text="@string/ipv6_sources_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center_vertical">
            <TextView
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="100dp"
                    android:textSize="15sp"
                    android:textColor="@color/main_text"
                    android:text="@string/clear_cache"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView10"/>
            <TextView
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="100dp"
                    android:textSize="12sp"
                    android:textColor="@color/main_text"
                    android:text="@string/clear_cache_repository"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView11"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center_vertical">
            <TextView
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="100dp"
                    android:textSize="15sp"
                    android:textColor="@color/main_text"
                    android:text="@string/clear_search_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView8"/>
            <TextView
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="100dp"
                    android:textSize="12sp"
                    android:textColor="@color/main_text"
                    android:text="@string/clear_search_history_descriptions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView9"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center_vertical">
            <TextView
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="100dp"
                    android:textSize="15sp"
                    android:textColor="@color/main_text"
                    android:text="@string/clear_watch_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6"/>
            <TextView
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="100dp"
                    android:textSize="12sp"
                    android:textColor="@color/main_text"
                    android:text="@string/clear_watch_history_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView7"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>