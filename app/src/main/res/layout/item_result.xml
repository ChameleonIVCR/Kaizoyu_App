<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginEnd="4dp">
    <TextView
            android:textColor="@color/main_text"
            android:text="999M"
            android:layout_width="0dp"
            android:layout_height="16dp" android:id="@+id/text_size"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/text_size_label"
            android:layout_marginStart="10dp" app:layout_constraintTop_toBottomOf="@+id/text_bot"
            android:layout_marginTop="7dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp"/>
    <TextView
            android:textColor="@color/main_text"
            android:text="Non-Video"
            android:layout_width="0dp"
            android:layout_height="16dp" android:id="@+id/text_format"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/cover_image"
            android:layout_marginStart="76dp" app:layout_constraintTop_toBottomOf="@+id/text_quality"
            android:layout_marginTop="7dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp"/>
    <TextView
            android:textColor="@color/main_text"
            android:text="Unknown"
            android:layout_width="54dp"
            android:layout_height="16dp" android:id="@+id/text_quality"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/cover_image"
            android:layout_marginStart="76dp" app:layout_constraintTop_toBottomOf="@+id/text_bot"
            android:layout_marginTop="7dp"/>
    <ImageView
            android:layout_width="80dp"
            android:layout_height="110dp"
            android:src="@drawable/cover_nocoverart"
            android:id="@+id/cover_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="20dp"
            android:contentDescription="Anime cover image"/>
    <TextView
            android:textColor="@color/main_text"
            android:layout_width="0dp"
            android:layout_height="41dp"
            android:id="@+id/text_title"
            android:textSize="15sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cover_image"
            android:layout_marginStart="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="10sp"
            app:autoSizeMaxTextSize="15sp"
            app:autoSizeStepGranularity="2sp"
            android:text="Title"/>
    <TextView
            android:textColor="@color/main_text"
            android:text="CR-HOLLAND-IPv6|NEW"
            android:layout_width="0dp"
            android:layout_height="16dp" android:id="@+id/text_bot"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@+id/text_title" android:layout_marginTop="7dp"
            app:layout_constraintStart_toEndOf="@+id/cover_image" android:layout_marginStart="76dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp"/>
    <TextView
            android:textColor="@color/main_text"
            android:text="Bot:"
            android:layout_width="0dp"
            android:layout_height="16dp" android:id="@+id/text_bot_label"
            android:textSize="12sp" app:layout_constraintStart_toEndOf="@+id/cover_image"
            android:layout_marginStart="20dp" app:layout_constraintTop_toBottomOf="@+id/text_title"
            android:layout_marginTop="7dp" app:layout_constraintEnd_toStartOf="@+id/text_bot"
            android:layout_marginEnd="10dp"/>
    <TextView
            android:textColor="@color/main_text"
            android:text="Quality:"
            android:layout_width="0dp"
            android:layout_height="16dp" android:id="@+id/text_quality_label"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/cover_image"
            android:layout_marginStart="20dp" app:layout_constraintTop_toBottomOf="@+id/text_bot_label"
            android:layout_marginTop="7dp" app:layout_constraintEnd_toStartOf="@+id/text_quality"
            android:layout_marginEnd="10dp"/>
    <TextView
            android:textColor="@color/main_text"
            android:text="Size:"
            android:layout_width="30dp"
            android:layout_height="16dp" android:id="@+id/text_size_label"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/text_quality"
            android:layout_marginStart="10dp" app:layout_constraintTop_toBottomOf="@+id/text_bot"
            android:layout_marginTop="7dp"/>
    <TextView
            android:textColor="@color/main_text"
            android:text="Format:"
            android:layout_width="0dp"
            android:layout_height="16dp" android:id="@+id/text_format_label"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp" app:layout_constraintStart_toEndOf="@+id/cover_image"
            android:layout_marginStart="20dp" app:layout_constraintTop_toBottomOf="@+id/text_quality_label"
            android:layout_marginTop="7dp" app:layout_constraintEnd_toStartOf="@+id/text_format"
            android:layout_marginEnd="10dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>